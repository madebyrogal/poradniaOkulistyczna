{% extends "AppBundle::layout.html.twig" %}

{% block title %}AppBundle:Disease:index{% endblock %}

{% block body %}
    <div class="disease">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1>Wybierz pacjenta</h1>
                    <ul class="disease-choice clearfix">
                        <li class="child active"><a title="" href="">Dziecko</a></li>
                        <li class="adult"><a title="" href="">Dorosły</a></li>
                    </ul>
                    <ul class="disease-list clearfix">
                        {% for category in diseaseCategories %}
                            <li>
                                <span class="name">{{category.name}}</span>
                                <div class="disease-content">
                                    <ul class="menu-disease">
                                        {% for disease in category.diseases %}
                                            <li {% if loop.first %}class="active" {% endif %} data-disease="disease-{{disease.id}}">{{disease.name}}</li>
                                            {% endfor %}
                                    </ul>
                                    {% for disease in category.diseases %}
                                        <div class="more-disease disease-{{disease.id}} {% if loop.first %}active{% endif %}">
                                            <div class="mode type-{{disease.type | default('A')}}"><span>{{disease.type}}</span>{{disease.type | writeType}}</div>
                                            <div class="picture">
                                                {% if disease.picture1 %}<img class="img-responsive" alt="" src="{{asset(disease.picture1)}}"/>{% endif %}
                                            </div>
                                            <div class="about-disease">
                                                <div class="top">Objawy:</div>
                                                <div class="desc">
                                                    <p>{{disease.symptoms | raw}}</p>
                                                </div>
                                            </div>
                                            <div class="about-disease">
                                                <div class="top">Zalecenia:</div>
                                                <div class="desc">
                                                    <p>{{disease.recommendation | raw}}</p>
                                                </div>
                                            </div>
                                            {% if disease.comments %}
                                                <div class="about-disease">
                                                    <div class="comments clearfix">
                                                        <div class="desc">
                                                            <b>Uwaga!</b><br/> 
                                                            <p>{{disease.comments | raw}}</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                            <!--<div class="unwrap-button">
                                                                            <a class="" title="" href="#">Zwiń zalecenia <i class="fa fa-chevron-up"></i></a>
                                                                        </div>-->
                                        </div>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--Advertice -->
    {{ include('AppBundle:common:_advertice.html.twig') }}
    <!--Advertice end-->
    <!--Helpfull informations -->
    {{ include('AppBundle:common:_helpfullInformations.html.twig', {'show':{'disise':0, 'exam':1, 'medicine':1, 'info':0}}) }}
    <!--Helpfull informations end-->
{% endblock %}
