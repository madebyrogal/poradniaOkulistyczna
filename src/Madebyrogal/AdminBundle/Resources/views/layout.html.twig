<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Panel Administracyjny - Logowanie{% endblock %}</title>
        {% block stylesheets %}
            {{ include('MadebyrogalAdminBundle::_partial/include_head.html.twig') }}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-fluid">
            {% if app.request.hasPreviousSession %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="flash-{{ type }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
        </div>
        <div class="container-fluid">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        {% block javascripts %}
            {{ include('MadebyrogalAdminBundle::_partial/include_foot.html.twig') }}
        {% endblock %}
    </body>
</html>
